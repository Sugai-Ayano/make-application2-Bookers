 <div class='col-md-3'>
      <h2>User info</h2>
      <div><%= attachment_image_tag(user, :profile_image, fallback: "No_image.jpg", size: "100x100") %></div>
  <table class='table'>
   <tbody>
  <tr>
    <th>name</th>
    <td><%= current_user.name %><td>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
  </tbody>
</table>

<div class='row'>
  <%= link_to "", edit_user_path(user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
</div>
    <h2 class="mt-3">New book</h2>
      <%= form_with model: book, local:true do |f| %>
    Title
  <div class="field">
   <%= f.text_field :title %>
  </div>
    Opinion
  <div class="field">
  <%= f.text_area :body %>
  <th colspan="3"></th>
  </div>
 <div class="form-group">
   <%= f.submit 'Create Book', class:"btn btn-success" %>
  </div>
<% end %>
    </div>