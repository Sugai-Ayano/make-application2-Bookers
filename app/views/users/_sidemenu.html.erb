 <div class='col-md-3'>
      <h2>User info</h2>
      <div><%= attachment_image_tag(@user, :profile_image, fallback: "No_image.jpg", size: "100x100") %></div>
  <table class='table'>
   <tbody>
  <tr>
    <th>name</th>
    <td><%= current_user.name %><td>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
  </tbody>
</table>

<div class='row'>
  <%= link_to "", edit_user_path(@user.id), class: 'btn btn-outline-secondary btn-block fas fa-user-cog' %>
</div>
