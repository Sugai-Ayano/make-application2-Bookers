<main>
        <p id="notice"></p>
        <div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <table class='table'>
      <tr><%= attachment_image_tag(@user, :profile_image, fallback: "No_image.jpg", size: "100x100") %></tr>
  <tr>
    <th>name</tr>
    <tr><%= current_user.name %></tr>
  </th>
	  <th>introduction</th>
	  <th><%= current_user.introduction %></th>
  </tr>
</table>

<div class='row'>

</div>
      <h2 class="mt-3">New book</h2>
      <%= form_with model:@book, local:true do |f| %>
  <% if @book.errors.any? %>
  <%= @book.errors.count %> error prohibited this book from being saved:
  <% @book.errors.full_messages.each do |message| %>
  <%= message %>
   <% end %>
  <% end %>
    Title
  <div class="field">
   <%= f.text_field :Title %>
  </div>
    Opinion
  <div class="field">
  <%= f.text_area :Opinion %>
  </div>
  <div class="actions">
     <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book" />
  </div>
<% end %>

</form>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tr>
        <td><% @books.each do |book| %>
        <tr><%= attachment_image_tag(@users, :profile_image, fallback: "No_image.jpg", size: "100x100") %></tr>
         <td><%= book.title %></td>
         <td><%= link_to "title", books_path(book.id) %></td>
    </tr>
        <% end %>
        </td>
      </tr>
  </tbody>
</table>
    </div>
  </div>
</div>
