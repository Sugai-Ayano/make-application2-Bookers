 <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
    <h2>User info</h2>
     <!-- form_with部分 -->
      <%= form_with model:@user, local: true do |f| %>
      <div>
       <h4>Name</h4>
        <%= f.text_field :name, size: "20x10", class: "form-control" %>
      </div>

      <div>
       <h4>Image</h4>
        <%= f.attachment_field :profile_image %>
      </div>

     <div>
       <h4>Introduction</h4>
         <%= f.text_area :introduction, size: "3x3", class: "form-control" %>
　　 </div>

　　 <div>
　　　  <%= f.submit 'Update User', class: "btn btn-secondary" %>
　　  　<% end %>
　   </div>
</div>

 <footer>
  <div class='container mt-5'>
  	<div class='row'>
    	<div class='mx-auto'>
    		<p>CopyRight Infratop.inc</p>
    	</div>
    </div>
  </div>
</footer>
