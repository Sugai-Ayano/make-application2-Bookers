<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
     <header>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark nav">
      <a class="navbar-brand" href="/"><span>Bookers</span></a>
        <div class="ml-auto nav-style">
          <% if user_signed_in? %>
          <li><%= link_to 'Home', user_path(current_user.id), class: "fas fa-home nav-link text-light" %></li>

          <li><%= link_to 'Users', users_path, class: "fas fa-users nav-link text-light" %></li>

          <li><%= link_to 'Books', books_path, class:" fas fa-book-open nav-link text-light" %></li>

          <li><%= link_to 'logout', destroy_user_session_path, method: :delete, class: "fas fa-sign-out-alt nav-link text-light" %></li>

         <% else %>
           <p>
             <%= link_to root_path do %>
            <span class="fas fa-home text-light">Home</span>
            <% end %>
           </p>
         　<p>
         　  <%= link_to home_about_path do %>
            <span class="fas fa-users text-light">About</span>
            <% end %>
          　</p>
          　 <p>
          　    <%= link_to new_user_registration_path do %>
            <span class="fas fa-book-open text-light">sign up</span>
            <% end %>
          　</p>
          　 <p>
          　    <%= link_to new_user_session_path do %>
            <span class="fas fa-sign-out-alt text-light">login</span>
            <% end %>
          　</p>
        　<% end %>
        </div>
  </nav>
</header>
<%= flash[:notice] %>
<%= yield %>
  </body>
</html>
